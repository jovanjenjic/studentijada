{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["plugin:react/recommended", "airbnb", "prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react", "prettier"
    ],
    "ignorePatterns": ["browserconfig.xml", "site.webmanifest"],
    "rules": {
      "prettier/prettier": "warn",
      "jsx-a11y/label-has-for": 0,
      "arrow-body-style": "off",
      "prefer-arrow-callback": "off",
      "no-unused-vars": [
        "error",
        {
          "vars": "local",
          "args": "none"
        }
      ]
    }
}
